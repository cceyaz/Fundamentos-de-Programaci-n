#include "stdafx.h"
#include <iostream>

using namespace std;

int main()
{
	int t,n;
	cout<<" 1 ------> Pares"<<endl;
	cout<<" 2 ------> Impares"<<endl;
	cout<<"Que tipo de numeros quiere mostrar: "<<endl;
	cin>>t;
	cout<<"Hasta que numero: "<<endl;
	cin>>n;

	int suma = 0;
	if (t == 1)
	{
		for (int i = 1; i<=n; i++)
		{
			if (i%2 == 0)
			{
				cout<<i<<endl;
				suma = suma +i;
			}
		}
	}
	else
	{
		for (int i = 1; i<=n; i++)
		{
			if ((i%2) > 0)
			{
				cout<<i<<endl;
				suma = suma +i;
			}
		}
	}
	cout<<"La suma  es: " << suma<<endl;

	system ("PAUSE");

	return 0;
}
