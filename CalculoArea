// CalculoArea.cpp : Defines the entry point for the console application.
//

#include "stdafx.h"
#include <iostream>
#include "math.h"
#include "conio.h"

using namespace std;
void main()
{
	//Declarar variables
	float a,b,c,s,area;
	cout<<"Ingresar lado 1: "<<endl;
	cin>>a;
	cout<<"Ingresar lado 2: "<<endl;
	cin>>b;
	cout<<"Ingresar lado 3: "<<endl;
	cin>>c;
	s = ((a+b+c)/2);
	area = sqrt(s*(s-a)-(s-b)*(s-c));
	cout<<"El Area es: "<<area<<endl;
	system ("PAUSE");
}
