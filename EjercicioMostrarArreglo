#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;

int main ()
{
	int numeros[100];
	int n;
	cout<<"Ingrese el nro. de elementos que va tener el arreglo: ";
	cin>>n;
	
	for (int i=0; i<n; i++)
	{
		cout<<"Digite un numero: ";
		cin>>numeros[i];
	}

	for (int i=0; i<n; i++)
	{
		cout<<i<<"--->"<<numeros[i]<<endl;
	}
	getch();
}
